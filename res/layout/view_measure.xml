<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@android:id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_show_hidden_view"/>
    
    <TextView 
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView 
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView 
        android:id="@+id/textview_delay_measure_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView 
        android:id="@+id/textview_delay_measure_result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <View
        android:id="@+id/view_test"
        android:layout_width="80px"
        android:layout_height="60px"
        android:background="@color/blue"/>
    
    <net.cmoaciopm.demo.framework.MyLinearLayout2
        android:id="@+id/layout_custom"
        android:layout_width="200px"
        android:layout_height="300px">
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Custom layout"/>
    </net.cmoaciopm.demo.framework.MyLinearLayout2>
</LinearLayout>